extend ../layout.pug
block contenido
   header(class="buttons")
      nav(class="contenedor")
         div 
            button(type="button", class="button_S")
               svg(xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-box-arrow-in-right" viewBox="0 0 16 16")
                  path(fill-rule="evenodd" d="M6 3.5a.5.5 0 0 1 .5-.5h8a.5.5 0 0 1 .5.5v9a.5.5 0 0 1-.5.5h-8a.5.5 0 0 1-.5-.5v-2a.5.5 0 0 0-1 0v2A1.5 1.5 0 0 0 6.5 14h8a1.5 1.5 0 0 0 1.5-1.5v-9A1.5 1.5 0 0 0 14.5 2h-8A1.5 1.5 0 0 0 5 3.5v2a.5.5 0 0 0 1 0v-2z")
                  path(fill-rule="evenodd" d="M11.854 8.354a.5.5 0 0 0 0-.708l-3-3a.5.5 0 1 0-.708.708L10.293 7.5H1.5a.5.5 0 0 0 0 1h8.793l-2.147 2.146a.5.5 0 0 0 .708.708l3-3z")
               a(href="/logout", class="Cerrar_sesión") Cerrar sesión  

            button(type="button" class="button_M_U")
               svg(xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-person-circle" viewBox="0 0 16 16")
                  path(d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z")
                  path(fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z")
               a(href="/app/myuser", class="Mi_usuario") Mi Usuario
   div
      h1(class="hola-bienve") Hola #{name}, ¡Bienvenid@! 
   -if(classcode == null){
      from(class="HAHAHA4")
      h3(class="unir-clas") ¡Unete a una clase!
      form(action="/app/entrar_clase",method="POST")
         div(class="cod-clas")
            label(for="cod") Codigo de clase: 
            input(type="number", name="cod", placeholder="Codigo de clase", id="cod", required)
         div 
            input(type="submit", value="Unirme a la clase")
   -}else if(classcode !== null){
      div(class="HAHAHA7")
         h2 #[a(href="/app/clase") #{classname}]
         p(class="codi-clas-chido") #[b Codigo de clase:] #{classcode}
         p(class="grado-unu") #[b Grado:] #{grade} || #[b Grupo:] #{group}
         p(class="escuela-xd") #[b Escuela:] #{school}
   -}